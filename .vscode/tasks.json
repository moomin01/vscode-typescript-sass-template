{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "update",
      "args": ["update"]
    },
    {
      "taskName": "test",
      "args": ["run", "test"],
      "isTestCommand": true
    },
    {
      "taskName": "sass",
      "args": ["run", "build:sass"]
    },
    {
      "taskName": "ts",
      "args": ["run", "build:ts"],
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "build",
      "args": ["run", "build"],
      "problemMatcher": "$tsc",
      "isBuildCommand": true
    },
    {
      "taskName": "watch",
      "args": ["run", "watch"]
    }
  ]
}